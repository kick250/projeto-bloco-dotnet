@using Entities
@model Comment

@{
    ViewData["Title"] = "Adicionar comentario";
}

<h1>Adicionar Comentário</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="AddComments" asp-controller="Comments">
            <div class="text-danger">@ViewBag.Error</div>
            <div class="form-group">
                <label for="Content" class="input-group-text">Comentário</label>
                <textarea class="form-control" asp-for="Content" aria-label="With textarea" required></textarea>
                <span asp-validation-for="Content" class="text-info">Comentários...</span>
            </div>
            <div class="form-group">
                <input type="submit" value="Comentar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
