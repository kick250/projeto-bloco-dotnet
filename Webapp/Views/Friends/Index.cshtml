@using Entities;
@model List<User>

<h1>Friends</h1>

<p>
    <a asp-action="New" asp-controller="Friends">Adicionar amigo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Foto
            </th>
            <th>
                Nome
            </th>
            <th>
                Email
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="@item.ProfileImage" style="width: auto; height: 100px">
                </td>
                <td>
                    @item.GetFullName()
                </td>
                <td>
                    @item.GetEmail()
                </td>
                <td>
                    @Html.ActionLink("Remover amigo", "Delete", new { friendEmail = item.GetEmail() })
                </td>
            </tr>
        }
    </tbody>
</table>

