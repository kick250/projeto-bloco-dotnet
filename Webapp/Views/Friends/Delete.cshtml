@model string;

@{
    ViewData["Title"] = "Remover amigo";
}

<h1>Remover amigo</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="RemoveFriend" asp-controller="Friends" asp-route-friendEmail="@Model">
            <div class="text-danger">@ViewBag.Error</div>
            <div class="form-group">
                <label for="email" class="control-label">Email</label>
                <input name="email" id="email" for="email" value="@Model" class="form-control" disabled />
            </div>
            <div class="form-group">
                <input type="submit" value="Remover amigo" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
