@using Entities
@model Post

@{
    ViewData["Title"] = "Details";
}

<h1>Detalhes</h1>

<div>
    <h4>Post</h4>
    <hr />
    <dl class="row">
        <dt class ="col-sm-2">
            Titulo
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            Conteúdo
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Content)
        </dd>
        <dt class="col-sm-2">
            Dono
        </dt>
        <dd class="col-sm-10">
            @Model.GetOwnerName()
        </dd>
        <dt class="col-sm-2">
            Informações de contato
        </dt>
        <dd class="col-sm-10">
            <a href="mailto:@Model.GetOwnerEmail()" >@Model.GetOwnerEmail()</a>
        </dd>
        <dt class="col-sm-2">
            Imagem
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.ImageUrl" style="height: 350px; width: auto;" />
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index">Voltar para lista</a>
</div>

<h5>Comentários</h5>
<a asp-controller="Comments" asp-action="New" asp-route-postId="@Model.Id">Adicionar contato</a>

@if (Model.Comments == null)
{
    <span class="text-warning">Esse Post não possui comentários</span>
} else
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    Dono
                </th>
                <th>
                    Conteúdo
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (Comment item in Model.Comments)
            {
                <tr>
                    <td>
                        @item.GetOwnerName()
                    </td>
                    <td>
                        @item.Content
                    </td>
                </tr>
            }
        </tbody>
    </table>
}